<Window x:Class="SanityArchiver.DesktopUI.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SanityArchiver.DesktopUI.Views"
        mc:Ignorable="d"
        Title="Error" Height="125" Width="200">
    <Grid>
        <TextBox Width="180" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" Margin="10">Please select at least 1 file to compress!</TextBox>
        <Button Content="Ok" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="74" Margin="0, 0, 0, 10" Click="Button_Click"/>
    </Grid>
</Window>
